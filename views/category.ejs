<%- include('partials/mainHeader') %>

        <div class="itemDetail">
            <img src=<%= category.img ? `/data/uploads/${category.img}` : "/images/fruit.jpg"%> alt="Category">
            <div class="detail">
                <h1>Name : <%= category.name %></h1>
                <p>Total Food Item under this category : <%= foodItems.length %></p>
                <p class='descp'><%= category.description %></p>
                <div class="btn-group">
                    <a class='btn' href=<%= `${category.url}/update` %>>Update Category</a>
                    <a class='btn' href=<%= `${category.url}/delete` %>>Delete Category</a>
                </div>
                <div class="delete-message">
                    <% if(title == 'deleteForm'){ %>
                        <% if(foodditems.length > 0){ %>
                            <p>Delete all Food Items under this Category to delete this Category.</p>
                        <% }else{ %>
                            <p>Are you sure, you want to delete this Food Category.</p>
                            <form class="" action="" method="post">
                                <button type="submit" name="button">Delete</button>
                            </form>
                        <% } %>
                    <% } %>
                </div>
            </div>
        </div>

        <h1 class="list-heading">Food Items under this category</h1>

        <div class="grid-container">
            <% foodItems.forEach(foodItem => { %>
                <div class="item-card">
                    <img src=<%= foodItem.img ? `/data/uploads/${foodItem.img}` : "/images/fruit.jpg"%> alt="foodItem">
                    <div class="info">
                        <h1><%= foodItem.name %></h1>
                        <p><%= foodItem.description %></p>
                    </div>
                    <a class='btn' href= <%= foodItem.url %>>View Food Item</a>
                </div>
            <% }) %>
