<%- include('partials/mainHeader') %>
        <h1 class="heading">Delete Food Category</h1>
        <div class="itemDetail">
            <img src="/images/fruit.jpg" alt="">
            <div class="detail">
                <h1>Name : <%= category.name %></h1>
                <p class='descp'><%= category.description %></p>

                <% if(foodItems.length > 0){ %>
                    <p>Delete the following Food Items before attempting to delete this Food Category.</p>

                <% }else{ %>
                    <p>Are you sure, you want to delete this Food Category.</p>
                    <form class="" action="" method="post">
                        <button type="submit">Delete</button>
                    </form>
                <% } %>

            </div>
        </div>

        <% if(foodItems.length > 0){ %>
            <div class="grid-container">
                <% foodItems.forEach(foodItem => { %>
                    <div class="item-card">
                        <img src="/images/fruit.jpg" alt="Fruit">
                        <div class="info">
                            <h1><%= foodItem.name %></h1>
                            <p><%= foodItem.description %></p>
                        </div>
                        <a class='btn' href= <%= foodItem.url %>>View Food Item</a>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </body>
</html>
