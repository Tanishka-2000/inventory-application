<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <title></title>
        <link rel="stylesheet" href="/stylesheets/form.css">
    </head>
    <body>
        <h1>Create New Category</h1>
        <form class="" action="" method="post">
            <div class="form-group">
                <input type="text" name="name" id="name" value="<%=category ? category.name : ''%>" >
                <label for="name">Category Name</label>
                
            </div>
            <div class="form-group">
                <input rows='2' cols='30' type="text" name="descp" id="descp" required='true' value="<%=  category ? category.description : ''%>"/>
                <label for="descp">Category description</label>

            </div>
            <!-- <div class="form-group">
                <input type="file" name="image" id="image" required='true'>
                <label for="image">Category Image</label>

            </div> -->
            <button type="submit">Submit</button>
        </form>
    </body>
</html>
